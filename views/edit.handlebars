<header>
  <!-- navigation -->
  <nav class="navbar navbar-light bg-light">
    <div class="container">
      <a class="navbar-brand" href="/">
        <img src="https://assets-lighthouse.s3.amazonaws.com/uploads/image/file/6227/restaurant-list-logo.png"
          width="30" height="30" class="d-inline-block align-top" alt="修改">
        我的餐廳清單
      </a>
    </div>
  </nav>

  <div class="banner"></div>
</header>

<div class="container">
  <div class="row">
    <div class="col-12 col-md-10 mx-auto">
      {{#with editRestaurant}}
      <form method="POST" action="/restaurants/{{_id}}/edit">
        <div class="form-group mt-3">
          <label></label>
          <input type="hidden" class="form-control" name="_id" value="{{_id}}">
        </div>
        <div class="form-group mt-3">
          <label>店名</label>
          <input type="text" class="form-control" name="name" value="{{name}}">
        </div>
        <div class="form-group">
          <label>英文店名</label>
          <input type="text" class="form-control" name="name_en" value="{{name_en}}">
        </div>
        <div class="form-group">
          <label>類別</label>
          <input type="text" class="form-control" name="category" value="{{category}}">
        </div>
        <div class="form-group">
          <label>照片連結</label>
          <input type="url" class="form-control" name="image" value="{{image}}">
        </div>
        <div class="form-group">
          <label>地址</label>
          <input type="text" class="form-control" name="location" value="{{location}}">
        </div>
        <div class="form-group">
          <label>電話</label>
          <input type="tel" class="form-control" name="phone" pattern="[0-9]{2} [0-9]{4} [0-9]{4}" value="{{phone}}">
        </div>
        <div class="form-group">
          <label>Google Map連結</label>
          <input type="url" class="form-control" name="google_map" value="{{google_map}}">
        </div>
        <div class="form-group">
          <label>評價</label>
          <input type="number" class="form-control" name="rating" min="1" max="5" step="0.1" value="{{rating}}">
        </div>
        <div class="form-group">
          <label>描述</label>
          <input type="text" class="form-control" name="description" value="{{description}}">
          </input>
          <div class="form-group mt-3">
            <label></label>
            <input type="hidden" class="form-control" name="__V" value="{{P}}">
          </div>
          {{/with}}

          <button type="submit" class="btn btn-primary mt-3">修改</button>
      </form>

    </div>
  </div>
</div>