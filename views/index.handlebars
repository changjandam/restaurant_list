<!-- search bar -->
<div class="container search-bar">
  <div class="search-bar-outer">
    <div class="search-bar-inner">
      <form action="/restaurants/search">
        <h4 class="mb-2">尋找餐廳：</h4>
        <div class="input-group">
          <input type="text" name="keyword" class="form-control" placeholder="輸入餐廳、分類" aria-label="Restaurant Name..."
            value="{{keyword}}" aria-describedby="search-button">
          <div class="input-group-append">
            <button class="btn btn-major" type="submit" id="search-button"><i class="fas fa-search"></i></button>
          </div>
        </div>
      </form>
    </div>
  </div>
</div>

{{!-- sort button --}}

<!-- restaurant list -->
<div class="container mt-5">
  
  <div class="row">
    {{#each restaurants}}
    <div class="col-lg-3 col-sm-4 col-6 my-3">
      <a href="/restaurants/{{this._id}}" class="text-secondary">
        <div class="card">
          <img class="card-img-top" src="{{this.image}}" alt="{{this.name}}">
          <div class="card-body p-3">
            <h6 class="card-title mb-1">{{this.name}}</h6>

            <div class="restaurant-category mb-1">
              <i class="fas fa-utensils pr-2"></i> {{this.category}}
            </div>

            <span class="badge badge-pill badge-danger font-weight-normal">
              {{this.rating}}
              <i class="fas fa-star fa-xs"></i>
            </span>

          </div>
          <div class="card-footer d-flex justify-content-end">

            <a href="/restaurants/{{this._id}}/edit" class="btn btn-primary active mr-1" role="button">修改</a>
            <form action="/restaurants/{{this._id}}?_method=DELETE" method="post"><button type="submit"
                class="btn btn-danger ml-1">刪除</button></form>
          </div>
        </div>
      </a>
    </div>

    {{/each}}
  </div>
</div>